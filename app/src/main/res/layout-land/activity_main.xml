
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4CAF50" >


    <TextView
        android:id="@+id/enter_numbers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="right"
        android:maxLength="13"
        android:background="#E0E0E0"
        android:layout_marginTop="40dp"/>


    <TableLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity ="center"
        android:background="#4CAF50"
        android:layout_below="@+id/enter_numbers"
        android:layout_marginTop="40dp">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:gravity="center">

            <Button
                android:id="@+id/b_ln"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ln"
                android:layout_column="0"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/button_log"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/log"
                android:layout_column="1"
                android:layout_weight="1"/>


            <Button
                android:id="@+id/button_1_divide_x"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/one_division_x"
                android:layout_column="2"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/button_abs"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/abs"
                android:layout_weight="1"
                android:layout_column="3"
                android:layout_marginRight="20dp"/>



            <Button
                android:id="@+id/button_9"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/b9"
                android:layout_column="4"
                android:layout_weight="1"/>


            <Button
                android:id="@+id/button_8"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/b8"
                android:layout_column="5"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/button_7"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/b7"
                android:layout_column="6"
                android:layout_weight="1"/>


            <Button
                android:id="@+id/multiplication"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/multiplication"
                android:layout_column="7"
                android:layout_weight="1"/>

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:gravity="center">

            <Button
                android:id="@+id/button_y_pow_x"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/y_pow_x"
                android:layout_column="0"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/button_PI"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/PI"
                android:layout_column="1"
                android:layout_weight="1"/>


            <Button
                android:id="@+id/button_E"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/E"
                android:layout_column="2"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/button_e_pow_x"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/e_pow_x"
                android:layout_weight="1"
                android:layout_column="3"
                android:layout_marginRight="20dp"/>



            <Button
                android:id="@+id/button_6"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/b6"
                android:layout_column="4"
                android:layout_weight="1"/>


            <Button
                android:id="@+id/button_5"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/b5"
                android:layout_column="5"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/button_4"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/b4"
                android:layout_column="6"
                android:layout_weight="1"/>


            <Button
                android:id="@+id/b_equal"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/equal"
                android:layout_column="7"
                android:layout_weight="1"/>

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:gravity="center">


            <Button
                android:id="@+id/closed_parenthesis"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/closed_parenthesis"
                android:layout_column="0"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/open_parenthesis"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/open_parenthesis"
                android:layout_column="1"
                android:layout_weight="1"/>


            <Button
                android:id="@+id/button_x_pow_2"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:text="x^2"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/button_happy"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Happy"
                android:layout_column="3"
                android:layout_marginRight="20dp"
                android:layout_weight="1"/>



            <Button
                android:id="@+id/button_3"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/b3"
                android:layout_column="4"
                android:layout_weight="1"/>


            <Button
                android:id="@+id/button_2"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/b2"
                android:layout_column="5"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/button_1"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/b1"
                android:layout_column="6"
                android:layout_weight="1"/>


            <Button
                android:id="@+id/button_0"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/b0"
                android:layout_column="7"
                android:layout_weight="1"/>

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:gravity="center">

            <Button
                android:id="@+id/sin"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sin"
                android:layout_column="0"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/cos"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cos"
                android:layout_column="1"
                android:layout_weight="1"/>


            <Button
                android:id="@+id/tan"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tan"
                android:layout_column="2"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/button_dot"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bDot"
                android:layout_weight="1"
                android:layout_column="3"
                android:layout_marginRight="20dp"/>



            <Button
                android:id="@+id/AC"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/AC"
                android:layout_column="4"
                android:layout_weight="1"/>


            <Button
                android:id="@+id/sum"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sum"
                android:layout_column="5"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/subtraction"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/subtraction"
                android:layout_column="6"
                android:layout_weight="1"/>


            <Button
                android:id="@+id/division"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/division"
                android:layout_column="7"
                android:layout_weight="1"/>

        </TableRow>

    </TableLayout>

</RelativeLayout>
